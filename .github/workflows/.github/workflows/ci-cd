name: CI/CD Pipeline

# Trigger the workflow on push to main or pull request to main
on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

jobs:
  build:
    name: Build and Test
    runs-on: ubuntu-latest

    steps:
      # Checkout the repository code
      - name: Checkout Code
        uses: actions/checkout@v2

      # Set up Docker
      - name: Set up Docker
        uses: docker/setup-buildx-action@v1

      # Build the Docker image
      - name: Build Docker Image
        run: |
          docker build -t your-app-image-name .

      # Run the Docker container
      - name: Run Docker Container
        run: |
          docker-compose up -d

      # Optionally, you can add unit tests here
      # Example:
      # - name: Run tests
      #   run: docker-compose run your-service-name test-command

  deploy:
    name: Deploy to Production
    needs: build
    runs-on: ubuntu-latest
    if: github.ref == 'refs/heads/main'

    steps:
      - name: Checkout Code
        uses: actions/checkout@v2

      - name: Set up Docker
        uses: docker/setup-buildx-action@v1

      # Log in to DockerHub (or any other container registry)
      - name: Log in to Docker Hub
        run: echo "${{ secrets.DOCKER_PASSWORD }}" | docker login -u "${{ secrets.DOCKER_USERNAME }}" --password-stdin

      # Push the Docker image to Docker Hub
      - name: Push Docker Image
        run: |
          docker build -t your-dockerhub-username/your-app-image-name .
          docker push your-dockerhub-username/your-app-image-name

      # Deploy the container (if using a cloud service, write deployment steps)
      # - name: Deploy to server or cloud
      #   run: your deployment commands
